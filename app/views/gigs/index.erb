<center><h1>Gigs</h1></center>
<br>
  <% @gigs.each do |gig| %>
    <b><%= gig.bands %></b> - <%= gig.location %> | <%= gig.time %> --- <%= gig.date.strftime("%m/%d/%Y") %>
    <!-- limits editing to only the user that added the gig-->
    <% if gig.user && session[:user_id] == gig.user.id %>
    <a href="/gigs/<%=gig.id%>/edit">
      <button class="button1">
        <span class="button--inner">Edit or Delete</span>
      </button>
    </a>
    <% end %>
    <br>
  <% end %>
<br>
<br>
<p><a href="/gigs/new">Create a new gig</a></p>